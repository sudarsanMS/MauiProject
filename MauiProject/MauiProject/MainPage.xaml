<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProject.MainPage">

    <Grid RowDefinitions="50,*">
        <Button Text="click" Clicked="Button_Clicked" Grid.Row="0"></Button>
        <ScrollView Grid.Row="1">
            <Grid RowDefinitions="Auto,Auto">
                <BoxView HeightRequest="200" Grid.Row="0" x:Name="height" Color="Green"/>
                <BoxView HeightRequest="1000" Grid.Row="1" Color="Red"></BoxView>
            </Grid>
        </ScrollView>
    </Grid>

</ContentPage>

